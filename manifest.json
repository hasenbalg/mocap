{// Required
 "manifest_version": 2,
 "name": "Mocap",
 "version": "0.0",

 // Recommended
 "description": "Watch 360 images with Leap Motion",
 "icons": {"16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

          "browser_action": {
            "default_title": "",
            "default_popup": "index.html"
          },

 // Optional
 "author": "Finn Jensen, Frank Hasenbalg",
 "permissions": [
          "contextMenus", "activeTab"
        ],
    "background": {
      "scripts": ["js/background_script.js"]
    }
}
